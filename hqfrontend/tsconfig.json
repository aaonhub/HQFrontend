{
	"compilerOptions": {
		"target": "esnext", // Targeting modern environments
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		// "noEmit": true, // This can be left as is or removed, depending on your preference
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
		  "@/*": [
			"./src/*"
		  ]
		}
	},
	"include": [
		"src"
	]
}